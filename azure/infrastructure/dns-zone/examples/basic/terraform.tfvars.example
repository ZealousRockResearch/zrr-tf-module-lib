# Basic DNS Zone Configuration Example
# Copy this file to terraform.tfvars and modify the values as needed

# DNS Zone Configuration
zone_name           = "example-basic.com"
resource_group_name = "dns-basic-rg"

# A Records Configuration
a_records = [
  {
    name    = "www"
    ttl     = 3600
    records = ["1.2.3.4"]
  },
  {
    name    = "api"
    ttl     = 300
    records = ["5.6.7.8"]
  }
]

# CNAME Records Configuration
cname_records = [
  {
    name   = "blog"
    ttl    = 3600
    record = "www.example-basic.com"
  }
]

# Tagging
common_tags = {
  Environment = "development"
  Project     = "my-project"
  Owner       = "my-team"
  CostCenter  = "engineering"
  ManagedBy   = "Terraform"
}

dns_zone_tags = {
  DNSType    = "public"
  Purpose    = "basic-example"
  Monitoring = "disabled"
  Records    = "minimal"
}

