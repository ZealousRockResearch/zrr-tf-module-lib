# Basic configuration example for Storage Container module

# Storage Account Configuration
storage_account_name                = "mystorageaccount"
storage_account_resource_group_name = "storage-rg"

# Tagging
common_tags = {
  Environment = "dev"
  Project     = "my-project"
  Owner       = "team-name"
  CostCenter  = "engineering"
  Department  = "platform"
}

# Optional: Additional container-specific configuration
# Uncomment and modify as needed:

